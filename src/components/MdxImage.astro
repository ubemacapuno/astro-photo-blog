---
/**
 * This component replaces every img generated by MDX.
 * Uses lazy loading by default; pass loading="eager" for above-the-fold images.
 */
const {
  src,
  alt = "",
  loading = "lazy",
  decoding = "async",
  class: className,
  ...rest
} = Astro.props;
---

<img
  src={src}
  alt={alt}
  loading={loading}
  decoding={decoding}
  class={className ?? "block w-full my-6"}
  {...rest}
/>
