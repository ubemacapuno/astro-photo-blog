---
const { tag, link } = Astro.props;
---

<a
  href={link ? `/${link}` : `/tags/${tag}`}
  data-astro-prefetch
  class="text-center h-5 gap-1 rounded-full border px-3 py-1.5 text-xs font-medium tag-link bg-gray-300 text-black! no-underline! my-2 mx-1"
>
  #{tag}
</a>

<style>
  .tag-link {
    color: white;
  }
  .dark .tag-link {
    color: black;
  }
</style>
