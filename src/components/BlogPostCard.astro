---
import { formatDate } from "../consts";
import type { Post } from "../types";

interface Props {
  post: Post;
}

const { post } = Astro.props as Props;
---

<a href={post.url} data-astro-prefetch class="blog-card-link block">
  <div
    class="border border-gray-200 p-4 flex flex-col md:flex-row hover:border-red-600 transition-colors"
  >
    <div class="flex-1 mb-1">
      <h2 class="text-lg font-bold text-red-600">{post.frontmatter.title}</h2>
      <p class="text-xs">{formatDate(post.frontmatter.pub_date)}</p>
      <p class="text-sm">{post.frontmatter.description}</p>
      <p class="text-xs text-gray-500">{post.frontmatter.type}</p>
    </div>
    <div class="flex-1">
      <img
        src={post.frontmatter.image.url}
        alt={post.frontmatter.image.alt}
        class="w-full h-auto"
        loading="lazy"
        decoding="async"
      />
    </div>
  </div>
</a>

<style>
  .blog-card-link {
    text-decoration: none;
    font-weight: normal;
  }

  .blog-card-link:hover {
    text-decoration: none;
  }
</style>
